grammar ReguExpression
  rule regex
    union <UnionNodeM> / concat <ConcatNodeM>
  end

  rule union
    (left:concat '|' right:regex) <UnionNodeM>
  end

  rule concat
    (star <StarNodeM> / sym <SymNodeM> / paren <ParenNodeM>)* <ConcatNodeM>
  end

  rule star
    ((sym <SymNodeM> / paren <ParenNodeM>) '*') <StarNodeM>
  end

  rule sym
    [^|+()*] <SymNodeM>
  end

  rule paren
    ('(' regex ')') <ParenNodeM>
  end
end
